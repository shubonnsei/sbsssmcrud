<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.sony.ppog.mapper.LanguageMapper">
	<resultMap id="BasicResultMap"
		type="jp.co.sony.ppog.entity.Language" autoMapping="true">
		<id property="countryCode" jdbcType="VARCHAR" column="country_code" />
		<id property="language" jdbcType="VARCHAR" column="language" />
	</resultMap>
	<select id="getOfficialLanguageByCountryCode" parameterType="java.lang.String"
		resultType="java.lang.String">
		select
		    al.language 
		from
		    language as al 
		where
		    al.percentage = ( 
		        select
		            max(nl.percentage) 
		        from
		            language as nl 
		        where
		            nl.delete_flg = 'visible' 
		            and nl.is_official = 'T' 
		            and nl.country_code = #{countryCode,jdbcType=NVARCHAR}
		    )
	</select>
</mapper>